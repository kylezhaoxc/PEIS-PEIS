    /// <summary>
    /// 心跳程序，定时刷新在线列表数据,默认6分钟
    /// </summary>
    function GetClientList() {
        if (num == "" || num == undefined || num == 0)
            num = 6;
        setInterval("LoadClientList_Ajax()", (num * 60 * 1000));
    }
    // 获取端每六分钟刷新一次信息
    GetClientList(5.5);
</script>
