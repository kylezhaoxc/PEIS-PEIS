            <tbody id="ArcCustListItemTemplete">
                <tr>
                <td><input type="checkbox" name="@chkArcCustQueryList" id="chkArcCust_@ID_ArcCustomer" value="@ID_ArcCustomer"  CustomerName="@CustomerName"  /></td>
